<% is_update = @action == 'update'
   two = {view: 'shared/container', class: 'col-12 col-lg-4'}
   if is_update
     two[:locals] = {class: 'ct-settings-dash-update', tabs: [
         {id: 'ct-dash-create', label: 'Update tile', active: true, view: 'settings/create_tile'},
         {id: 'tabDel', view: 'shared/delete', label: 'Delete',
          locals: {url: settings_destroy_tile_path(id: @tile.id)}},
         {label: 'Cancel', path: settings_dashboard_url},
     ]}
   else
     two[:locals] = {class: 'ct-settings-dash-create', tabs: [
         {id: 'ct-dash-create', label: 'Add tile', active: true, view: 'settings/create_tile'}
     ]}
   end

%>


<%= render 'shared/two_cols', one: {view: 'settings/tiles', class: 'col-12 col-lg-8'},
           two: two %>
