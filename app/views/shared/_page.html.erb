<% main_class = local_assigns.fetch(:class)
   primary_tab = local_assigns.key?(:primary) ? local_assigns.fetch(:primary) : false

%>
<div class="row ct-page <%= main_class %>">
  <div class="col-12 col-lg-3 order-lg-last">
    <div class="facet-card card bg-dark mb-3">
      <div class="card-title px-3 pt-3 mb-0">
        <%= render 'shared/facets_menu', primary: primary_tab %>
      </div>
      <div class="card-body p-3">
        <%= render 'shared/facets_content', primary: primary_tab %>
      </div>
    </div>
    <% if primary_tab == select_active[:sym] %>
      <div data-func="primary"></div>
    <% end %>

  </div>
  <div class="col-12 col-lg-9 order-lg-first d-none d-lg-block">
    <% primary = select_primary
       primary_vm = primary[:vm] %>
    <%= render primary_vm[:view], populate_locals(primary_vm, {primary: true}) %>
  </div>
</div>