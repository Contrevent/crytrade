<% one_in = local_assigns.fetch(:one)
   two_in = local_assigns.fetch(:two)
   if one_in.is_a? String
     one_out = {view: one_in, class: "col-xl-9"}
   else
     one_out = (one_in.key? :class) ? one_in : one_in.merge({class: "col-xl-9"})
   end
   if two_in.is_a? String
     two_out = {view: two_in, class: "col-xl-3 col-lg-6 col-md-9"}
   else
     two_out = (two_in.key? :class) ? two_in : two_in.merge({class: "col-xl-3 col-lg-6 col-md-9"})
   end %>
<%= render 'shared/ly_row', class: 'justify-content-around', cols: [one_out, two_out] %>
