<% tabs = local_assigns.fetch(:tabs)
   css_class = local_assigns.fetch(:class) %>
<div class="card border-dark ct-card <%= css_class %>">
  <div class="card-body text-light bg-dark">
    <%= render 'shared/menu', tabs: tabs %>
    <div class="tab-content">
      <% tabs.select {|item| item.key? :view}.each do |tab|
        tab_content = render tab[:view], populate_locals(tab)  %>
        <%= render 'shared/content', id: tab[:id], active: (tab.key? :active and tab[:active]), content: tab_content %>
      <% end %>
    </div>
  </div>
</div>