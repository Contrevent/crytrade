<%= render 'shared/container', class: 'ct-ledger-index', tabs: [
    {id: 'tabFun', active: @tab == 'index', label: 'Funds', view: 'ledger/funds'},
    {id: 'tabDep', active: @tab == 'deposit', label: 'Deposit', view: 'ledger/create_transac',
     locals: {url: ledger_deposit_url, prefix: 'ct-dep', kind: 'success', label: 'Deposit'}},
    {id: 'tabWit', active: @tab == 'withdraw', label: 'Withdraw', view: 'ledger/create_transac',
     locals: {url: ledger_withdraw_url, prefix: 'ct-wit', kind: 'danger', label: 'Withdraw'}}
] %>
