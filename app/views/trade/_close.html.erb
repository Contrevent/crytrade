<%= form_with scope: :trade, url: trade_close_url, method: "post" do |form| %>

  <%= render 'shared/form_errors', record: @trade %>

  <%= render 'shared/text_row', parent: form, id: 'ct-sell-stop-usd', symbol: :sell_stop_usd, label: @trade.sell_symbol + ' Price ($)' %>

  <%= render 'shared/text_row', parent: form, id: 'ct-stop-usd', symbol: :stop_usd, label:  @trade.buy_symbol + ' Price ($)' %>
  <%= render 'shared/text_row', parent: form, id: 'ct-fees-usd', symbol: :fees_usd, label: 'Fees ($)' %>

  <% render 'shared/readonly_row', id: 'ct-gain-loss-usd', symbol: :gain_loss_usd, label: 'Gain/Loss ($)' %>

  <%= form.hidden_field(:id) %>
  <%= submit_tag("Close Trade", class: 'btn btn-sm btn-info ct-card-btn-submit', id: 'ct-close-btn') %>
<% end %>