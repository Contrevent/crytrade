<% close_active = true
   if @trade.errors.any?
     unless @trade.errors[:sell_stop_usd].any? or @trade.errors[:sell_stop_usd].any? or @trade.errors[:fees_usd].any?
       close_active = false
     end
   end
%>
<%= render 'shared/container', class: 'ct-trade-update', tabs: [
    {id: 'tabClose', active: close_active, view: 'trade/close', label: 'Close'},
    {id: 'tabEdit', active: !close_active, view: 'trade/edit', label: 'Edit'},
    {id: 'tabDel', view: 'shared/delete', label: 'Delete',
     locals: {url: trade_destroy_path(id: @trade.id)}},
    {label: 'Cancel', path: trade_url}
] %>