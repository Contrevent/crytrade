<table class="table table-striped table-dark ct-table ct-table-head ct-table-trade">
  <thead>
  <tr>
    <th class="text-center">Created at</th>
    <th class="text-center">Pair</th>
    <th class="text-center">Buy</th>
    <th class="text-center">Start (<%= ref_char %>)</th>
    <th class="text-center">Current (<%= ref_char %>)</th>
    <th class="text-center">&Delta; (<%= ref_char %>)</th>
    <th class="text-center">Trailing (<%= ref_char %>)</th>
    <th class="text-center">Init (<%= ref_char %>)</th>
    <th class="text-center">Risk (<%= ref_char %>)</th>
    <th></th>
  </tr>
  </thead>
</table>
<div class="ct-table-body-parent">
  <table class="table table-striped table-dark ct-table ct-table-trade">
    <tbody>

    <% @trades.each do |trade| -%>

      <tr>
        <td><%= render 'shared/cell', content: trade.created_at.strftime('%b-%d %H:%M') %></td>
        <td>
          <%= render 'shared/cell', content: "#{trade.sell_symbol}/#{trade.buy_symbol}" %>
        </td>
        <td>
          <%= render 'shared/cell', content: "#{num_norm(trade.count)} #{trade.buy_symbol}" %>
        </td>
        <td>
          <%= render 'shared/cell', content: usd_to_ref_fine(trade.start_usd) %>
        </td>
        <td>
          <%= render 'shared/cell', content: trade.current_usd == -1 ? 'n.a.' : usd_to_ref_fine(trade.current_usd) %>
        </td>
        <td>
          <% if trade.current_usd != -1
               current_total = (trade.current_usd - trade.start_usd) * trade.count
          %>
            <%= render 'shared/cell_deco', value: usd_to_ref_norm(current_total), red: -100, green: 100 %>
          <% end %>
        </td>
        <td>
          <%= render 'shared/cell', content: usd_to_ref_fine(trade.trailing_stop_usd) %>
        </td>
        <td>
          <%= render 'shared/cell', content: usd_to_ref_fine(trade.init_stop_usd) %>
        </td>
        <td>
          <% risk = (trade.trailing_stop_usd - trade.start_usd) * trade.count %>
          <%= render 'shared/cell_deco', value: usd_to_ref_norm(risk), red: -100, green: 100 %>
        </td>
        <td>
          <div class="d-flex justify-content-center">
            <%= link_to "&#x2699".html_safe, trade_update_path(id: trade.id), class: 'btn btn-sm btn-outline-light ct-table-btn' %>
          </div>
        </td>
      </tr>
    <% end -%>
    </tbody>
  </table>
</div>
<% if @trades.empty? %>
  <div class="alert alert-secondary" role="alert">No trades to display</div>
<% end %>