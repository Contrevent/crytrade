<% active = local_assigns.fetch(:active) %>
<div class="row">
  <div class="col-12 col-lg-12">

    <div class="d-none d-sm-block">
      <ul class="nav nav-pills" role="tablist">
        <li class="nav-item">
          <a class="nav-link text-white ct-bg-tab-success <%= 'active' if active == 'run' %>"
             data-toggle="tab" href="#tabRun" role="tab">
            Run
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white ct-bg-tab-info <%= 'active' if active == 'config' %>"
             data-toggle="tab" href="#tabConfig" role="tab">
            Configure
          </a>
        </li>
      </ul>

      <div class="w-100 mb-2"></div>
    </div>

    <div class="tab-content ct-screener-content">
      <% run_content = render 'screener/run' %>
      <%= render 'shared/tab', active: active == 'run', id: 'tabRun', content: run_content %>
      <% create_content = render 'screener/configure' %>
      <%= render 'shared/tab', active: active == 'config', id: 'tabConfig', content: create_content %>

    </div>
  </div>

</div>