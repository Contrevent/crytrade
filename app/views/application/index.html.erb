<div class="container-fluid">
  <div class="row">
    <br/>
    <table class="table table-dark ct-table">
      <thead>
      <tr>
        <% @columns.each do |col| -%>
          <th><%= col.key?(:label) ? col[:label].html_safe : col[:name].capitalize %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @currencies.each do |currency| -%>
        <tr>
          <% @columns.each do |col| -%>
            <td>
              <% kind = col.key?(:kind) ? col[:kind].call(currency) : 'empty'
                 align = col.key?(:align) ? col[:align] : 'right'
              %>

              <% if col.key?(:link) %>
                <a class='btn btn-outline-light ct-btn' target="_blank" href='<%= col[:link].call(currency) %>'>&#10174;</a>
              <% else %>
                <div class="ct-chip alert-<%= kind %> alert-<%= align %>">
                  <%= col.key?(:get_value) ? col[:get_value].call(currency) : currency[col[:name]] %>
                </div>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end -%>
      </tbody>
    </table>
  </div>
</div>